  },
  "image#icoDrawer": {
    "props": {
      "src": "https://ceramicaitalia.vteximg.com.br/arquivos/LogoCeramicaItalia.png",
      "alt": "alt",
      "height": "35px",
      "blockClass": "icoDrawer"
