    "children": ["image#img-hide-mobile-USA"],
    "props": { "blockClass": ["col-img-hide-mobile"] }
  },

  "image#img-hide-mobile-USA":
  {
    "props": {
         "src": "assets/imgs/bandera_usa.png",
